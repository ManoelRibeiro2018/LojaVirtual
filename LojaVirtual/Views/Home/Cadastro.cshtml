@model Cliente;
@{
    ViewData["Title"] = "Cadastro";
}
<form asp-action="CadastroCliente" asp-controller="Home" method="post">
    <main role="main">
        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">

                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <a asp-action="Login" asp-controller="Home" class="float-right btn btn-outline-primary mt-1">Log in</a>
                                <h4 class="card-title mt-2">Sign up</h4>
                            </header>
                            <article class="card-body">
                            @{ if (TempData["MSG-S"] != null)
                                {
                                    <p class="alert-success alert">@TempData["MSG-S"]</p>
                                }

                            }
                                <form>
                                    <div class="form-row">
                                        <div class="col form-group">
                                            <label asp-for="Nome">Nome Completo</label>
                                            <input type="text" class="form-control" asp-for="Nome" placeholder="">
                                            <span style="color:red" asp-validation-for="Nome"></span>
                                        </div> <!-- form-group end.// -->
                                        <div class="col form-group">
                                            <label asp-for="DataNascimento">Data de nascimento</label>
                                            <input type="text" class="form-control" asp-for="DataNascimento" placeholder="">
                                            <span style="color:red" asp-validation-for="DataNascimento"></span>
                                        </div> <!-- form-group end.// -->
                                    </div> <!-- form-row end.// -->
                                    <div class="form-group">
                                        <label asp-for="Email">Email</label>
                                        <input type="email" asp-for="Email" class="form-control" placeholder="">
                                        <span style="color:red" asp-validation-for="Email"></span>
                                    </div> <!-- form-group end.// -->
                                    <div class="form-group">
                                        <label asp-for="Cpf">CPF</label>
                                        <input type="text" asp-for="Cpf" class="form-control" placeholder="">
                                        <span style="color:red" asp-validation-for="Cpf"></span>
                                    </div> <!-- form-group end.// -->
                                    <div class="form-group">
                                        <label asp-for="Telefone">Telefeone</label>
                                        <input type="tel" width="60" asp-for="Telefone" class="form-control" placeholder="">
                                        <span style="color:red" asp-validation-for="Telefone"></span>
                                    </div> <!-- form-group end.// -->
                                    <div class="form-group">
                                        <label class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" asp-for="Sexo"  value="M">
                                            <span class="form-check-label"> Masculino </span>
                                        </label>
                                        <label class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" asp-for="Sexo" value="F">
                                            <span class="form-check-label"> Feminino</span>
                                        </label>
                                        <span style="color:red; display:block" asp-validation-for="Sexo"></span>
                                    </div> <!-- form-group end.// -->
                                    <div class="form-group">
                                        <label asp-for="Senha">Senha</label>
                                        <input class="form-control" asp-for="Senha" type="password">
                                        <span style="color:red" asp-validation-for="Senha"></span>
                                    </div> <!-- form-group end.// -->

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-block"> Cadastrar </button>
                                    </div> <!-- form-group// -->
                                </form>
                            </article> <!-- card-body end .// -->
                            <div class="border-top card-body text-center">Já possui uma conta?<a asp-action="Login" asp-controller="Home"> Logar</a></div>
                        </div> <!-- card.// -->
                    </div> <!-- code-wrap.// -->
                </aside>
            </div>
        </section>
    </main>
</form>


